{
    "name": "boot-cell",
    "version": "0.25.0",
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "Web Components UI library based on WebCell v2 & BootStrap v4",
    "keywords": [
        "web",
        "component",
        "ui",
        "webcell",
        "bootstrap"
    ],
    "homepage": "https://web-cell.dev/BootCell/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/BootCell.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/BootCell/issues"
    },
    "source": "source/index.ts",
    "types": "dist/index.d.ts",
    "main": "dist/index.umd.js",
    "module": "dist/index.js",
    "peerDependencies": {
        "bootstrap": "^4.4.1",
        "classnames": "^2.2.6",
        "dialog-polyfill": "0.5.0",
        "iterable-observer": "^1.0.0-beta.2",
        "github-markdown-css": "^3.0.1",
        "markdown-ime": "^1.0.3",
        "marked": "^0.8.0",
        "turndown": "^5.0.3",
        "turndown-plugin-gfm": "^1.0.2",
        "web-animations-js": "^2.3.2",
        "web-cell": "^2.0.0-rc.15"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.9",
        "@types/core-js": "^2.5.2",
        "@types/jest": "^25.1.1",
        "@types/marked": "^0.7.2",
        "@types/turndown": "^5.0.0",
        "@webcomponents/webcomponentsjs": "^2.4.1",
        "bootstrap": "^4.4.1",
        "classnames": "^2.2.6",
        "core-js": "^3.6.4",
        "dialog-polyfill": "0.5.0",
        "github-markdown-css": "^3.0.1",
        "happy-dom": "^0.10.8",
        "husky": "^4.2.1",
        "identity-obj-proxy": "^3.0.0",
        "iterable-observer": "^1.0.0-beta.2",
        "jest": "^25.1.0",
        "less": "^3.10.3",
        "lint-staged": "^10.0.7",
        "markdown-ime": "^1.0.3",
        "marked": "^0.8.0",
        "microbundle": "^0.11.0",
        "open-cli": "^5.0.0",
        "parcel-bundler": "^1.12.4",
        "prettier": "^1.19.1",
        "snabbdom": "^0.7.4",
        "snabbdom-looks-like": "^1.0.5",
        "ts-jest": "^25.2.0",
        "turndown": "^5.0.3",
        "turndown-plugin-gfm": "^1.0.2",
        "typedoc": "^0.16.9",
        "typescript": "^3.7.5",
        "web-animations-js": "^2.3.2",
        "web-cell": "^2.0.0-rc.15"
    },
    "scripts": {
        "lint": "lint-staged",
        "test": "lint-staged  &&  jest --forceExit",
        "start": "cd test/  &&  parcel index.html --open",
        "pack-dist": "rm -rf dist/  &&  microbundle --external web-cell,classnames,marked,markdown-ime --globals web-cell=WebCell,classnames=classNames --name BootCell",
        "pack-docs": "rm -rf docs/  &&  typedoc source/",
        "build": "npm run pack-docs",
        "help": "npm run pack-docs  &&  open-cli docs/index.html",
        "prepublishOnly": "npm test  &&  npm run build"
    },
    "lint-staged": {
        "*.{html,md,less,json,yml,ts,tsx}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^.+\\.(css|less)$": "identity-obj-proxy"
        }
    }
}
