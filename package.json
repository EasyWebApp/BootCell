{
    "name": "boot-cell",
    "version": "0.17.0",
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "Web Components UI library based on WebCell v2 & BootStrap v4",
    "keywords": [
        "web",
        "component",
        "ui",
        "webcell",
        "bootstrap"
    ],
    "homepage": "https://web-cell.dev/BootCell/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/BootCell.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/BootCell/issues"
    },
    "source": "source/index.ts",
    "types": "dist/index.d.ts",
    "main": "dist/index.umd.js",
    "module": "dist/index.js",
    "peerDependencies": {
        "bootstrap": "^4.4.1",
        "classnames": "^2.2.6",
        "dialog-polyfill": "0.5.0",
        "web-animations-js": "^2.3.2",
        "web-cell": "^2.0.0-rc.12"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.9",
        "@types/jest": "^24.0.24",
        "classnames": "^2.2.6",
        "happy-dom": "^0.4.11",
        "husky": "^3.1.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^24.9.0",
        "less": "^3.10.3",
        "lint-staged": "^9.5.0",
        "microbundle": "^0.11.0",
        "open-cli": "^5.0.0",
        "prettier": "^1.19.1",
        "snabbdom": "^0.7.4",
        "snabbdom-looks-like": "^1.0.5",
        "ts-jest": "^24.2.0",
        "typedoc": "^0.15.5",
        "typescript": "^3.7.4",
        "web-cell": "^2.0.0-rc.12"
    },
    "scripts": {
        "lint": "lint-staged",
        "test": "lint-staged  &&  jest --forceExit",
        "pack-dist": "rm -rf dist/  &&  microbundle --external web-cell,classnames --globals web-cell=WebCell --name BootCell",
        "pack-docs": "rm -rf docs/  &&  typedoc source/",
        "build": "npm run pack-dist  &&  npm run pack-docs",
        "help": "npm run pack-docs  &&  open-cli docs/index.html",
        "prepublishOnly": "npm test  &&  npm run build"
    },
    "lint-staged": {
        "*.{md,less,json,yml,ts,tsx}": [
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^.+\\.(css|less)$": "identity-obj-proxy"
        }
    }
}
